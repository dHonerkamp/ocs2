; robot model meta-information
model_information {
  manipulatorModelType     3      // 0: Default-arm, 1: Wheel-based manipulator, 2: Floating-arm manipulator, 3: Omni-base mobile manipulator -> add a y velocity in the configs below to use this one
  
  ; motion joints in the URDF to consider fixed
  removeJoints {
  }

  ; base frame of the robot (from URDF)
  baseFrame                "base_link"
  ; end-effector frame of the robot (from URDF)
  eeFrame                  "hand_palm_link"
}

model_settings
{
  usePreComputation             true
  recompileLibraries            true
}

; DDP settings
ddp
{
  algorithm                     SLQ

  nThreads                      3

  maxNumIterations              10
  minRelCost                    0.1
  constraintTolerance           1e-3

  displayInfo                   false
  displayShortSummary           false
  checkNumericalStability       false

  AbsTolODE                     1e-5
  RelTolODE                     1e-3
  timeStep                      1e-3
  maxNumStepsPerSecond          100000
  backwardPassIntegratorType    ODE45

  inequalityConstraintMu        100.0
  inequalityConstraintDelta     1.1

  preComputeRiccatiTerms        true
  useNominalTimeForBackwardPass false

  useFeedbackPolicy             false

  strategy                      LINE_SEARCH
  lineSearch
  {
    minStepLength                 1e-2
    maxStepLength                 1.0
    hessianCorrectionStrategy     DIAGONAL_SHIFT
    hessianCorrectionMultiple     1e-3
  }
}

; Rollout settings
rollout
{
  AbsTolODE                     1e-5
  RelTolODE                     1e-3
  timeStep                      1e-2
  maxNumStepsPerSecond          100000
  checkNumericalStability       false
}

; MPC settings
mpc
{
  timeHorizon                    4.0
  numPartitions                  4

  runtimeMaxNumIterations        1
  initMaxNumIterations           10

  runtimeMaxStepLength           1.0
  runtimeMinStepLength           1e-2
  initMaxStepLength              1.0
  initMinStepLength              1e-2

  debugPrint                     false
  coldStart                      false

  useParallelRiccatiSolver       true  ; use disjoint riccati solver in MP case and recedingHorizon fashion

  solutionTimeWindow             0.3   ; [s]

  mpcDesiredFrequency            30   ; [Hz]
  mrtDesiredFrequency            400   ; [Hz]
}

; initial state
initialState
{
  (0,0)  0.0  ; position x
  (1,0)  0.0  ; position y
  (2,0)  0.0  ; heading
  (3,0)  0.2  ; arm_lift_joint
  (4,0)  -0.7 ; arm_flex_joint
  (5,0)  0.0  ; arm_roll_joint
  (6,0)  -1.2 ; wrist_flex_joint
  (7,0)  0.0  ; wrist_roll_joint
}

inputCost
{
  ; control weight matrix
  R
  {
    scaling 1e-2

    (0,0)  5.0  ; x velocity
    (1,1)  5.0  ; y velocity
    (2,2)  5.0  ; angular velocity
    (3,3)  1.0  ; arm_lift_joint
    (4,4)  1.0  ; arm_flex_joint
    (5,5)  1.0  ; arm_roll_joint
    (6,6)  1.0  ; wrist_flex_joint
    (7,7)  1.0  ; wrist_roll_joint
  }
}

endEffector
{
  ; end effector quadratic penalty scaling
  muPosition  10.0
  muOrientation  5.0
}

finalEndEffector
{
  muPosition  10.0
  muOrientation  5.0
}

selfCollision
{ 
  ; activate self-collision constraint
  activate  true

  ; Self Collision raw object pairs
  collisionObjectPairs
  {
  }

  ; Self Collision pairs
  collisionLinkPairs
  {
    [0] "base_link, hand_palm_link"
    [1] "torso_lift_link, hand_palm_link"
    [2] "head_tilt_link, hand_palm_link"
  }

  ; minimum distance allowed between the pairs
  minimumDistance  0.01

  ; relaxed log barrier mu
  mu     1e-2

  ; relaxed log barrier delta
  delta  1e-3
}

collisionSoft
{
  ; collision avoidance squared hinge penalty
  activate        false
  mu              1000  ; paper: 500
  delta           1e-3  ; paper: 1e-3
  radius          0.30  ;
  square_base     false
  diagonal_radius 0.0
  corner_radius   0.0
}

jointVelocityLimits
{
  lowerBound
  {
    (0,0) -0.2    ; x velocity
    (1,0) -0.2    ; y velocity
    (2,0) -1.0    ; angular velocity
    (3,0) -0.2    ; arm_lift_joint
    (4,0) -1.0    ; arm_flex_joint
    (5,0) -1.0    ; arm_roll_joint
    (6,0) -1.0    ; wrist_flex_joint
    (7,0) -1.0    ; wrist_roll_joint
  }

  upperBound
  {
    (0,0) 0.2    ; x velocity
    (1,0) 0.2    ; y velocity
    (2,0) 1.0    ; angular velocity
    (3,0) 0.2    ; arm_lift_joint
    (4,0) 1.0    ; arm_flex_joint
    (5,0) 1.0    ; arm_roll_joint
    (6,0) 1.0    ; wrist_flex_joint
    (7,0) 1.0    ; wrist_roll_joint
  }

  ; relaxed log barrier mu
  mu      0.01

  ; relaxed log barrier delta
  delta   1e-3
}

jointValueLimits
{
  activate  true
  lowerBound
  {
    (0,0) -1000.0  ; x
    (1,0) -1000.0  ; y
    (2,0) -1000.0  ; theta
    (3,0) 0.0      ; arm_lift_joint
    (4,0) -2.2853  ; arm_flex_joint
    (5,0) -0.5236  ; arm_roll_joint
    (6,0) -3.9     ; wrist_flex_joint
    (7,0) -2.3213  ; wrist_roll_joint
  }

  upperBound
  {
    (0,0) 1000.0  ; x
    (1,0) 1000.0  ; y
    (2,0) 1000.0  ; theta
    (3,0) 0.33    ; arm_lift_joint
    (4,0) 0.7146  ; arm_flex_joint
    (5,0) 1.3963  ; arm_roll_joint
    (6,0) 0.8     ; wrist_flex_joint
    (7,0) 0.00    ; wrist_roll_joint
  }

  ; relaxed log barrier mu
  mu      0.01

  ; relaxed log barrier delta
  delta   1e-3
}